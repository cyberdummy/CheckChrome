{
  "manifest_version": 2,

  "name": "CheckChrome",
  "description": "CheckFox clone for Chrome.",
  "version": "1.0",

  "permissions": [
    "contextMenus"
  ],
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "js": ["check_chrome.js"],
    "matches": [ "<all_urls>" ],
    "run_at": "document_start"
  }]
}
